@using PlacesWebsite.Models;

@{
  Layout = "_Layout";
}

<div class="container">
  <div class="jumbotron">
    <h1>Places I've Been</h1>
  </div>
  <form action="/places/new" method="post">
    <div class="form-group">
      <label for="place-name">Enter a place:</label>
      <input class="form-control" id="place-name" name="place-name" type="text">
    </div>
    <div class="form-group">
      <label for="place-image">Enter an image URL:</label>
      <input class="form-control" id="place-image" name="place-image" type="text">
    </div>
    <button class="btn" type="submit" name="submit-button">Add</button>
  </form>
  <h2>All the places I've been:</h2>
  <ul>
    @foreach (Place place in Model)
    {
      <li><a href="/places/@place.Id">@place.Name</a></li>
    }
  </ul>
</div>
